<h1><%= @event.title %></h1>

<div class="container">

  <div class="col-md-4 col-md-offset-2">
    <h2>Participants</h2>

    <ul>
      <% for p in @event.participants %>
        <li>
          <%= p.name %>
        </li>
      <% end %>
    </ul>
  </div>
  <div class="col-md-4">
    <h2>Constraints</h2>

    <% if @event.constraints.empty? %>
      No constraints.
    <% elsif %>
      <ul>
        <% for c in @event.constraints %>
          <li>
            <%= c.one.name %> - <%= c.other.name %>
          </li>
        <% end %>
      </ul>
    <% end %>
  </div>

</div>

<% if @event.draws.empty? %>
  <%= link_to 'Edit this event', edit_event_path(@event) %>

  <%= link_to 'Draw the ballots', event_draw_path(@event) %>
<% end %>
